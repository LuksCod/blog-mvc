@model Postagem

@{
    ViewData["Title"] = "Postagem";
}

<div class="container">
    <div class="row my-5">
        @* Postagem *@
        <div class="col-md-8">
            <article class="blog-post mb-4">
                <h2 class="blog-post-title">@Model.Nome</h2>
                <p class="blog-post-meta">
                    @Model.DataPostagem.ToString("dd 'de' MMMM 'de' yyyy")
                </p>
                <p>@Model.Descricao</p>
                <img src="@Model.Foto" class="img-fluid mb-3" alt="@Model.Nome">
                <p>@Html.Raw(Model.Texto)</p>
            </article>
        </div>
        @* Sidebar *@
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header">Pesquisar</div>
                <div class="card body">
                    <form>
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Pesquisar por...">
                            <button class="btn btn-outline-secondary">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="card mb-4">
                <div class="card-header">Categorias</div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
                        <li>
                            <a href="#" class="mb-2 text-decoration-none">
                                "Nem Vilões nem Heróis."
                            </a>
                        </li>
                        <li>
                            <a href="#" class="mb-2 text-decoration-none">
                                "Gon, Killua, Kurapika e Leorio."
                            </a>
                        </li>
                        <li>
                            <a href="#" class="mb-2 text-decoration-none">
                                "Vilão é só um ponto de vista?"
                            </a>
                        </li>
                        <li>
                            <a href="#" class="mb-2 text-decoration-none">
                                "Nen, Ten, Ren, Zetsu e Hatsu."
                            </a>
                        </li>
                        <li>
                            <a href="#" class="mb-2 text-decoration-none">                                "Trupe Fantasma, Formigas Chimera e mais."
                            </a>
                        </li>
                        <li>
                            <a href="#" class="mb-2 text-decoration-none">
                                "Reino Sombrio, Greed Island e muito mais."
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>